[flake8]
ignore =
    E203
    E266
    E501
    W503
    F403
    F401
    D400
    D401
    D205
    D102
    D414
    D209
    D105
    D101
    N802  # TODO: remove this (functino name should be lower-case)

max-line-length = 88
max-complexity = 18
rst-roles =
    class
    func
    mod
    data
    const
    meth
    attr
    exc
    obj
rst-directives =
    note
    warning
    versionadded
    versionchanged
    deprecated
    seealso
per-file-ignores =
    tests/*:D
    setup.py:D
