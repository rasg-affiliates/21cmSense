[flake8]
ignore =
    E203
    E266
    E501
    W503
    F403
    F401
    D401  # Imperative mood -- doesn't work for cached-property.
    D400  # TODO: remove all the rest of them following this one.
    D101
    N802  # TODO: remove this (functino name should be lower-case)

max-line-length = 88
max-complexity = 18
rst-roles =
    class
    func
    mod
    data
    const
    meth
    attr
    exc
    obj
rst-directives =
    note
    warning
    versionadded
    versionchanged
    deprecated
    seealso
per-file-ignores =
    tests/*:D
    setup.py:D
